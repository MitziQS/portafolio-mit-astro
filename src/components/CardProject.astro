---
import type { ImageMetadata } from 'astro'
import { Icon } from 'astro-icon/components'
import { Picture } from 'astro:assets'
import '@styles/tech-colors.css'

interface Props {
  src: string
  alt: string
  title: string
  description: string
  techs: string[]
  code?: string
  preview?: string
  href?: string
}

const {
  src,
  alt,
  title,
  description,
  techs,
  code,
  preview = 'Vista previa',
  href
} = Astro.props

const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/images/projects/*.{jpeg,jpg,png}'
)
if (!images[src]) {
  throw new Error(
    `"${src}" no existe en: "/src/images/projects/*.{jpeg,jpg,png}"`
  )
}
---

<section class="card-project">
  <div>
    <a href={href || '#'} aria-label={`Abrir ${title}`}>
      <Picture
        src={images[src]()}
        alt={alt}
        width={434}
        height={288}
        formats={['avif', 'webp']}
        fallbackFormat="webp"
      />
    </a>
  </div>

  <div class="description">
    <h3 class="card-title">
      <a href={href || '#'}>{title}</a>
    </h3>

    <div class="badges">
      {
        techs.map((tech) => {
          const techLower = tech.toLowerCase().replaceAll(' ', '-')
          return (
            <span class={`badge-tech ${techLower}`}>
              <Icon name={`techs/${techLower}`} size={24} />
              <span>{tech}</span>
            </span>
          )
        })
      }
    </div>

    <p class="card-desc">{description}</p>

    <div class="links">
      {
        code && code.startsWith('http') && (
          <a href={code} target="_blank" rel="noopener">
            <Icon name="github" size={24} />
            CÃ³digo
          </a>
        )
      }

      {
        href && (
          <a href={href}>
            <Icon name="link" size={24} />
            {preview}
          </a>
        )
      }
    </div>
  </div>
</section>

<style>
  .card-project {
    display: grid;
    align-items: center;
    gap: var(--space-6);
    margin-bottom: 86px;
    max-width: 434px;
    margin-inline: auto;
  }

  @media (width >= 1200px) {
    .card-project {
      grid-template-columns: 434px 1fr;
      max-width: 1100px;
    }
    .card-project:nth-child(odd) {
      grid-template-columns: 1fr 434px;
    }
    .card-project:nth-child(odd) .description {
      order: -1;
    }
  }

  .card-project img {
    border-radius: 8px;
  }

  .description {
    /* ritmo vertical uniforme */
    display: grid;
    gap: var(--space-4);
  }

  .card-title {
    font-size: var(--h3);
    font-weight: var(--w-semibold);
    line-height: var(--heading-line-height);
  }

  .card-title a {
    color: inherit;
    text-decoration: none;
    transition: var(--transition-text);
  }

  .card-title a:hover {
    color: var(--text-description-color);
  }

  .badges {
    display: flex;
    flex-wrap: wrap;
    gap: 12px 8px;
  }

  .badge-tech {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 4px 12px;
    border-radius: 1000px;
    font-size: var(--text-sm);
    line-height: 1.2;
  }

  .card-desc {
    color: var(--text-description-color);
    font-size: var(--text-lg);
    line-height: var(--leading-base);
    text-wrap: pretty;
  }

  .links {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-wrap: wrap;
  }

  .links a {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    color: var(--text-color);
    text-decoration: none;
    font-weight: var(--w-medium);
    padding: 10px 22px;
    border-radius: 1000px;
    border: 1px solid var(--text-color);
    transition: var(--transition-bg), var(--transition-text);
  }

  .links a:hover {
    background-color: var(--bg-secondary-color);
  }
</style>
